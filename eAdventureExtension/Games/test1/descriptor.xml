<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE game-descriptor PUBLIC "SYSTEM" "descriptor.dtd">
<game-descriptor versionNumber="39">
	<title>Evacuation Protocol for the Computer Science Building</title>
	<description>The game purpose is to learn the steps of the evacuation protocol in case of fire. The game allows you to navigate scenarios made with actual School photographs.</description>
	<configuration keepShowing="yes" keyboard-navigation="disabled" defaultClickAction="showDetails" perspective="regular" dragBehaviour="considerNonTargets">
		<gui type="contextual" inventoryPosition="top_bottom">
			<cursors>
				<cursor type="default" uri="gui/cursors/Cursor-Default.png" />
				<cursor type="exit" uri="gui/cursors/Cursor-Exit.png" />
				<cursor type="over" uri="gui/cursors/Cursor-Action.png" />
				<cursor type="action" uri="gui/cursors/Cursor-Action.png" />
			</cursors>
		</gui>
		<mode playerTransparent="yes" />
		<graphics mode="windowed" />
	</configuration>
	<contents>
		<chapter path="chapter1.xml">
			<title>Chapter 1</title>
			<description>This adventure has only one chapter</description>
		</chapter>
	</contents>
</game-descriptor>